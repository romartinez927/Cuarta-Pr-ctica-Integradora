<h1>Messages</h1>

<form id="formChat" method="post">
    <div>
        <label for="inputUser">User</label>
        <input id="inputUser" name="user" type="text" placeholder="Ingrese su Usuario...">
    </div>
    <div>
        <label for="inputMensaje">Message</label>
        <input id="inputMensaje" name="message" type="text" placeholder="Ingrese su mensaje...">
    </div>
    <button type="submit" id='formButton'>Enviar Mensaje</button>
</form>

<ul id='messagesContainer'>
    {{#if hayMensajes }}
        {{#each mensajes}}
            <li>{{this.user}}: {{this.message}}</li>
        {{/each}}
    {{else}}
        <p>no hay mensajes...</p>
    {{/if}}
</ul>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>